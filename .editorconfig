# -- General Settings ------------------- #

root = true

# -- All Files (Defaults) --------------- #

[*]

indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# -- Markdown Files --------------------- #

[*.md]
trim_trailing_whitespace = false
